pipeline {
    agent {
        docker { image '84.201.177.64:8123/build_dind:v1.0' }
    }
    stages {
        stage('Clone git repo myboxfuse with Java project and Dockerfile for prod image') {
            steps {
                sh 'git clone https://github.com/tovmayor/myboxfuse.git'
                sh 'ls -l'
            }
        }
        stage('Build jar') {
            steps {
                sh 'cd myboxfuse'
                sh 'mvn package'
                sh 'ls -l'
            }
        }
        stage('Make docker image') {
            steps {
                sh 'ls -l'
                sh 'docker --version'
                
            }
        }
    }
}
